{
	"name": "liminaldb",
	"version": "0.1.0",
	"description": "CLI for LiminalDB â€” agent-ergonomic prompt and skill management",
	"type": "module",
	"bin": {
		"liminaldb": "./dist/cli.js"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:integration": "vitest run --config vitest.integration.config.ts",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"typecheck": "tsc --noEmit",
		"check": "bun run format:check && bun run lint && bun run typecheck && bun run test",
		"check:local": "bun run check && bun run test:integration",
		"prepublishOnly": "bun run build"
	},
	"dependencies": {
		"c12": "3.3.3",
		"citty": "^0.2.1",
		"jose": "^6.1.3",
		"pathe": "^2.0.3",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.4",
		"@types/node": "^25.3.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/liminal-ai/liminaldb-cli.git"
	},
	"keywords": [
		"liminaldb",
		"cli",
		"prompts",
		"llm",
		"agent"
	],
	"license": "MIT",
	"author": "Liminal AI"
}
